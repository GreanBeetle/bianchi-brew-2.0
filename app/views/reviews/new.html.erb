

<p>ADD REVIEW FOR <%= @brew.name %></p>

<%= form_for @review, url: {action: "create"} do |f| %>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <%= f.label :content %>
  <%= f.text_field :content %>
  <%= f.label :rating %>
  <%= f.number_field :rating %>
  <p><%= f.submit %></p>
<% end %>

<small><%= link_to "HOME", brews_path %></small>
